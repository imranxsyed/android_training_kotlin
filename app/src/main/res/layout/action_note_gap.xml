<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f0f0f0">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You may order "
            android:importantForAccessibility="no"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_margin="0dp"
            />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Your prescription(s) in the 'Ready For Pick Up' Section "
            android:contentDescription="Your prescription(s) in the 'Ready For Pick Up' Section - link"
            android:textSize="18sp"
            app:layout_alignSelf="center"
            android:layout_margin="0dp"
            />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="for delivery by calling your pharmacy at"
            android:importantForAccessibility="noHideDescendants"
            android:textSize="18sp"
            app:layout_alignSelf="flex_end"
            android:layout_margin="0dp"
            />
        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:text="201-241-7422 "
            android:contentDescription="201-241-7422 - link"
            android:textSize="18sp"
            app:layout_alignSelf="flex_end"
            android:layout_margin="0dp"
            />
        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:text="(TTY : 711)."
            android:contentDescription="(TTY : 711). - link"
            android:textSize="18sp"
            app:layout_alignSelf="flex_end"
            android:layout_margin="0dp"
            />
    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>